<%- model_class = Image -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name_string) %>:</strong></dt>
  <dd><%= @image.name_string %></dd>
    <dt></dt>
    <dd><%= image_tag(@image.picture.url, width: "500") if @image.picture? %></dd>  
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              images_path, :class => 'btn btn-default'  %>
<% if current_user.paid%>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_image_path(@image), :class => 'btn btn-default' %>
  <%= link_to t('.delete', :default => t("helpers.links.destroy")),
                image_path(@image),
                :data => {"turbo-method": :delete, :turbo_confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
<% end %>