<% if current_user %>
  <div class="jumbotron text-center">
    <h2>Welcome to the Photo Management App.</h2>
  </div>

  <div class="row">
  <div class="col-sm-3 mx-auto">
    <% if !current_user.paid?%>
    <div class="card mx-auto">
      <div class="card-body mx-auto">
        <h5 class="card-title mx-auto">Premium Plan</h5>
        <div class="features mx-auto">
          <ul>
            <li>Unlimited Image Uploads</li>
            <li>Responsive design</li>
            <li>Access anywhere</li>
          </ul>
        </div>
        <p class="card-text">Price: $10</p>
          <%= link_to 'Checkout', checkout_path, class: 'btn btn-success sign-up' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
<% end %>
